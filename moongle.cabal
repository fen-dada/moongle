-- extra-source-files:

common warnings
    ghc-options: -Wall

library
    -- Import common warning flags.
    import:           warnings

    -- Modules exported by the library.
    exposed-modules:
        Effectful.Moongle
        Moongle.App
        Moongle.App.Runtime
        Moongle.CLI
        Moongle.Config
        Moongle.Env
        Moongle.Query
        Moongle.Query.Parser
        Moongle.Query.Syntax
        Moongle.Registry
        Moongle.Registry.Types
        Moongle.Server
        Moongle.Server.Handler
        Moongle.Server.Types
        Moongle.TypeSearch

    -- Modules included in this library but not exported.
    other-modules:
        Moongle.General.Utils
        Moongle.DB.Definition
        Moongle.DB.Index
        Moongle.DB.Insert
        Moongle.DB.Migrations
        Moongle.DB.Query
        Moongle.DB.Types
        Moongle.Query.Indexer
        Moongle.Query.Loader
        Moongle.Query.Search
        Moongle.Registry.Fetch
        Moongle.Registry.Model

    -- LANGUAGE extensions used by modules in this package.
    -- other-extensions:

    -- Other library packages from which modules are imported.
    build-depends:    
        log-base,
        base,
        language-moonbit,
        text,
        vector,
        optparse-applicative,
        aeson,
        lens,
        lens-aeson,
        effectful,
        filepath,
        bytestring,
        tar,
        zlib,
        zip-archive,
        log-effectful,
        http-client,
        parsec,
        servant,
        servant-server,
        servant-client,
        servant-effectful,
        time,
        warp,
        containers,
        effectful-postgresql,
        postgresql-simple,
        data-default,
        HsYAML-aeson,
        http-client-tls,

    -- Directories containing source files.
    hs-source-dirs:   src

    -- Base language which the package is written in.
    default-language: GHC2024

executable moongle
    -- Import common warning flags.
    import:           warnings

    -- .hs or .lhs file containing the Main module.
    main-is:          Main.hs

    -- Modules included in this executable, other than Main.
    -- other-modules:

    -- LANGUAGE extensions used by modules in this package.
    -- other-extensions:

    -- Other library packages from which modules are imported.
    build-depends:
        base ^>=4.21.0.0,
        moongle

    -- Directories containing source files.
    hs-source-dirs:   app

    -- Base language which the package is written in.
    default-language: GHC2024

test-suite moongle-test
    -- Import common warning flags.
    import:           warnings

    -- Base language which the package is written in.
    default-language: GHC2024

    -- Modules included in this executable, other than Main.
    -- other-modules:

    -- LANGUAGE extensions used by modules in this package.
    -- other-extensions:

    -- The interface type and version of the test suite.
    type:             exitcode-stdio-1.0

    -- Directories containing source files.
    hs-source-dirs:   test

    -- The entrypoint to the test suite.
    main-is:          Main.hs

    -- Test dependencies.
    build-depends:
        base,
        moongle,
        hspec,
        language-moonbit,
        effectful,
        bytestring,
        text,
        vector,
        wreq-effectful,
        log-effectful,
        log-base,
        lens,
        filepath,
        time,
        effectful-postgresql,
        postgresql-simple,
